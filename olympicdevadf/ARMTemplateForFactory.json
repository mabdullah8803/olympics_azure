															"p_folder": "raw_data",
															"p_file": {
																"value": "@item().name",
																"type": "Expression"
															}
														}
													}
												],
												"outputs": [
													{
														"referenceName": "Source_DS",
														"type": "DatasetReference",
														"parameters": {
															"p_container": "bronze",
															"p_folder": "nocs",
															"p_file": {
																"value": "@item().name",
																"type": "Expression"
															}
														}
													}
